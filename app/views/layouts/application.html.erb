<!DOCTYPE html>
<html>
<head>
  <title>Loop Estimation Tracker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  Signed in as <%= current_user.full_name %> | <%= link_to "Logout", destroy_session_path %>
<% else %>
  <%= link_to 'Login', new_session_path %> | <%= link_to 'Signup', signup_path %>
<% end %>

<%= yield %>

</body>
</html>